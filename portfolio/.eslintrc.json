// .eslintrc.json
{
  "root": true,
  "extends": "next/core-web-vitals",
  "rules": {
    // Unbenutzte Variablen komplett abschalten
    "@typescript-eslint/no-unused-vars": "off",
    // explizites any zulassen
    "@typescript-eslint/no-explicit-any": "off",
    // Ausdrücke ohne Zuweisung/Funktion aufrufen (no-unused-expressions)
    "@typescript-eslint/no-unused-expressions": "off",
    "no-unused-expressions": "off",
    // prefer-const (never reassigned → const) abschalten
    "prefer-const": "off",
    // React-Hooks-Regeln abschalten
    "react-hooks/rules-of-hooks": "off",
    "react-hooks/exhaustive-deps": "off"
  }
}
